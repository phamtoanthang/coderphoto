<p id="notice"><%= notice %></p>

<h1>Listing Insta Photos</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Caption</th>
      <th>Likes count</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insta_photos.each do |insta_photo| %>
      <tr>
        <td><%= insta_photo.username %></td>
        <td><%= insta_photo.caption %></td>
        <td><%= insta_photo.likes_count %></td>
        <td><%= image_tag(insta_photo.url) %></td>
        <td><%= link_to 'Show', insta_photo %></td>
        <td><%= link_to 'Edit', edit_insta_photo_path(insta_photo) %></td>
        <td><%= link_to 'Destroy', insta_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

